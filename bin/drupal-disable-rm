#!/bin/bash
# 02.05.2014
# 11.09.2014
# v0.2
#

SCRIPT_HELP="
Disable module via Drush and remove module directory."

. drupal-scripts-init

check_drush
check_drupal

module_dir="sites/all/modules/$1"
if [ ! -d "$module_dir" ]; then
	echo "module_dir $module_dir not exists, exit"
	exit 1
fi

drush dis $1 -y && drush pm-uninstall $1 -y
rm_command="rm -r $module_dir"
read -p "$rm_command ? " -n 1 -r
echo ""

if [[ ! $REPLY =~ ^[Yy]$ ]]; then
	echo "$rm_command"
    exit 1
else
	$rm_command
fi
